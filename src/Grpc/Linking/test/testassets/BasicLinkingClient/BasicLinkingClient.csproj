<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(DefaultNetCoreTargetFramework)</TargetFramework>
    <Nullable>enable</Nullable>
    <!-- Suppress warnings about lowercase variable names in generated code -->
    <NoWarn>$(NoWarn);CS8981</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Protobuf Include="..\Proto\greet.proto" GrpcServices="Client" Link="Protos\greet.proto" />

    <Reference Include="Google.Protobuf" />
    <Reference Include="Grpc.Net.Client" />
    <Reference Include="Grpc.Tools" PrivateAssets="All" />
  </ItemGroup>

</Project>
